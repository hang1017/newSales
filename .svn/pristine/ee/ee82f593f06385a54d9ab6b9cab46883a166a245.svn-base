.actionModel {
  .actionBg {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 9999;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .actAlert {
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 10000;
    height: 75%;
    background: #fff;
    transform: translateY(100%);
    transition: all 0.3s ease-in-out;

    &.show {
      transform: translateY(0);
    }

    .alertHead {
      display: flex;

      .priceBlock {
        display: flex;
        flex: 5;
        align-items: flex-end;

        .priceBlockContent {
          flex: 1;
          width: 0;
        }
      }

      .rightClose {
        flex: 1;
        text-align: right;

        img {
          width: 48px;
        }
      }
    }

    .price {
      color: rgba(245, 60, 84, 1);
      font-weight: 600;
      font-size: 36px;
      text-align: left;

      span {
        font-weight: 500;
        font-size: 24px;
      }
    }

    .proNum {
      color: rgba(198, 196, 199, 1);
      font-weight: 400;
      font-size: 24px;
    }

    .proSelectText {
      display: -webkit-box;
      padding-top: 5px;
      overflow: hidden;
      color: rgba(102, 102, 104, 1);
      font-weight: 400;
      font-size: 24px;
      text-overflow: ellipsis;
      word-break: break-all;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }

    .alertTitle {
      padding: 24px;
      color: rgba(4, 28, 30, 1);
      font-weight: 500;
      font-size: 28px;
    }

    .inputNum {
      width: 80px;
      height: 50px;
      text-align: center;
      background: rgba(243, 243, 243, 1);
      border-radius: 4px;
    }
  }

  .textRigth {
    text-align: right;
  }

  .alertContent {
    padding: 30px 24px;
  }

  .skuContent {
    // height: 560px;
    overflow-y: scroll;
  }

  .imgSize {
    width: 160px;
    height: 160px;
  }

  .imgDiv {
    display: flex;
    justify-content: center;
    width: 70px;
    height: 70px;

    .imgs {
      width: 40px;
      height: 40px;
      margin-top: 4px;
    }
  }
}
