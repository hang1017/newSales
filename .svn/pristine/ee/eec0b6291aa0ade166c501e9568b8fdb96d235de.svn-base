.goodsEvaluate {
  margin-top: 24px;
  overflow: hidden;
  background: rgba(255, 255, 255, 1);
  border-radius: 24px;

  &:first-child {
    margin-top: 0;
  }

  .productImg {
    width: 120px;
    height: 120px;
    margin-top: 32px;
    margin-right: 32px;
    margin-left: 32px;
  }

  .productInfo {
    margin-top: 32px;
    padding-right: 32px;

    .productTitle {
      height: 40px;
      overflow: hidden;
      color: rgba(6, 4, 30, 1);
      font-size: 28px;
      line-height: 40px;
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    .productProps {
      height: 32px;
      margin-top: 16px;
      color: rgba(105, 109, 108, 1);
      font-size: 24px;
      line-height: 32px;
    }
  }

  .evaluateContent {
    margin: 32px 32px 0;
    padding: 0 10px;
    overflow: hidden;
    background-color: #fcfcfc;
    border-radius: 8px;

    :global {
      .am-textarea-item {
        padding-left: 0;

        .am-textarea-control {
          background-color: #fcfcfc;
        }

        textarea {
          background-color: #fcfcfc;
        }
      }
    }
  }

  .anonymous {
    padding: 32px;
    border-top: 1px solid #f4f7f6;

    .leftItem {
      vertical-align: middle;

      img {
        margin-right: 10px;
      }
    }

    .disc {
      height: 32px;
      color: rgba(179, 181, 183, 1);
      font-size: 24px;
      line-height: 32px;
    }
  }
}
