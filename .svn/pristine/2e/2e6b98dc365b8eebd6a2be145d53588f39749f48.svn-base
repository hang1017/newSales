.detailListStyle {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;

  .dlHeader {
    width: 100%;
    background: linear-gradient(90deg, #6DB4FF 0%, #187DFB 100%);

    .dlHeaderTitle {
      padding: 20px 0px;
      position: relative;

      .title {
        font-size: 36px;
        font-weight: 400;
        color: #FFFFFF;
        line-height: 50px;
        text-align: center;
      }

      .backDiv {
        position: absolute;
        height: 100%;
        display: flex;
        align-items: center;
        left: 42px;
        top: 0px;
      }
    }

    .dlHeaderContent {
      display: flex;
      justify-content: space-between;

      .textContent {
        padding-left: 48px;

        .text {
          font-size: 28px;
          font-weight: 400;
          color: #FFFFFF;
          line-height: 40px;
          padding-top: 32px;
        }

        .phone {
          font-size: 40px;
          font-weight: 600;
          color: #FFFFFF;
          line-height: 56px;
          padding-top: 8px;
        }
      }

      .detailPhoneBg {
        flex-shrink: 0;
      }
    }
  }

  .dlCenter {
    flex: 1;
    background-color: #fff;
    margin-top: -50px;
    border-radius: 24px 24px 0px 0px;

    .selectTime {
      display: flex;
      flex-direction: column;
      height: 100%;

      :global {
        .alitajs-dform-title {
          font-size: 28px;
          font-weight: 400;
          color: #242424;
          line-height: 40px;
        }

        .am-list-line {
          border: none;
        }

        .am-list-body {
          border: none;
          background-color: #FCFCFC;
          border-radius: 24px 24px 0px 0px;
        }

        .am-list-item {
          border-radius: 24px 24px 0px 0px;
        }

        .am-list-extra {
          font-size: 24px !important;
        }

        .alitajs-dform-end-picker .am-list-extra {
          flex-basis: 100%;
        }

        .am-tabs-default-bar-tab-active {
          font-size: 32px;
          font-weight: 600;
          color: #041C1E;
          line-height: 44px;
        }

        .am-tabs-default-bar-top .am-tabs-default-bar-tab {
          border-bottom: 0px;
        }

        .am-tabs-default-bar-underline {
          height: 25px;
          background-color: #fff;
          border: none;
          display: flex;
          align-items: center;
          justify-content: center;
        }

        .am-tabs-default-bar-underline::before {
          position: absolute;
          display: inline-block;
          width: 100px;
          height: 6px;
          background-color: #1F90EC;
          border-radius: 24px;
          content: '';
        }
      }
    }
  }
}