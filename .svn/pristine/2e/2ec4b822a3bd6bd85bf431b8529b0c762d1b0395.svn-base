.myPage {
  .userInfo {
    padding: 24px 24px 100px 24px;
    color: #fff;
    background-image: url('../../../assets/img/my/my_bg.png');
    background-repeat: no-repeat;
    -moz-background-size: cover;
    -webkit-background-size: cover;
    -o-background-size: cover;
    background-size: cover;

    .headContent {
      display: flex;

      div {
        flex: 1;
      }

      .title {
        font-weight: 400;
        font-size: 36px;
      }

      .rigthContent {
        display: flex;
        justify-content: flex-end;

        img {
          width: 48px;
          height: 48px;
          margin-left: 24px;
        }
      }
    }

    .baseInfo {
      display: flex;
      align-items: center;
      padding: 24px 24px 0 24px;
      color: #fff;

      .toux {
        position: relative;
        display: flex;
        flex-shrink: 0;
        align-items: center;
        justify-content: center;
        width: 120px;
        height: 120px;

        img {
          width: 100%;
          height: 100%;
          border-radius: 100%;
        }

        .touxInput {
          position: absolute;
          width: 100%;
          height: 100%;
          opacity: 0;
        }
      }

      .userName {
        display: flex;
        justify-content: space-between;
        color: rgba(255, 255, 255, 1);
        font-size: 36px;

        .level {
          color: rgba(255, 255, 255, 1);
          font-size: 28px;
          text-align: left;
        }
      }

      .userAccount {
        padding-top: 24px;
        color: rgba(255, 255, 255, 1);
        font-size: 24px;
        line-height: 32px;
        text-align: left;
      }

      .userLevel {
        // flex: 3;
        font-weight: 500;
        font-size: 28px;
        // text-align: right;
      }
    }

    .myInfo {
      width: 100%;
      padding-left: 24px;
    }

    .headMenuList {
      display: flex;
      color: #fff;
      text-align: center;

      div {
        flex: 1;
      }

      .menuNum {
        padding-bottom: 6px;
        font-weight: 600;
        font-size: 36px;
      }

      p {
        font-weight: 400;
        font-size: 24px;
        opacity: 0.8;
      }
    }
  }

  .otherFeatures {
    margin-top: -40px;
    padding: 24px 40px;
    background: #fff;
    border-radius: 40px 40px 0 0;

    .featuresTitle {
      color: #06041e;
      font-weight: bold;
      font-size: 28px;
    }

    .normalBlock() {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 30px 0;
    }

    .myOrder {
      .normalBlock();

      div {
        text-align: center;
      }

      p {
        margin-top: 12px;
        color: #696d6c;
        font-weight: 400;
        font-size: 24px;
      }
    }

    .service {
      .normalBlock();

      margin-bottom: 20px;

      .serviceTitle {
        color: #041c1e;
        font-weight: 400;
        font-size: 28px;
      }

      .subTitle {
        margin-top: 12px;
        color: #b3b5b7;
        font-weight: 400;
        font-size: 24px;
      }

      .addrBlock {
        width: 48%;
        padding: 24px;
        background: rgb(254, 248, 233);
        border-radius: 16px;
      }

      .accountBlock {
        width: 48%;
        padding: 24px;
        background: rgb(235, 248, 252);
        border-radius: 16px;
      }

      img {
        position: absolute;
        margin-top: -60px;
        margin-left: 28%;
      }
    }
  }

  .footLogo {
    position: absolute;
    bottom: 110px;
    width: 100%;
    text-align: center;

    img {
      width: 40%;
    }
  }

  .orderNum {
    position: absolute;
    top: 370px;
    width: 32px;
    height: 32px;
    margin-left: 8px;
    padding: 4px 6px;
    color: #fff;
    font-size: 20px;
    line-height: 24px;
    background-color: rgba(245, 60, 84, 1);
    border-radius: 100%;
  }
}
