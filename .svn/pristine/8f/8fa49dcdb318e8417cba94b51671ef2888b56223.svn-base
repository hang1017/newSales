.treeNodeBlock {
  position: relative;
  margin-left: 10px;
  padding: 0 0 28px 40px;

  .treeNodeImg {
    position: absolute;
    width: 32px;
    margin-left: -55px;
  }

  .childBlock {
    .childBlockTitle {
      display: flex;
      color: rgba(6, 4, 30, 1);
      font-weight: 600;
      font-size: 24px;

      .childTitle {
        flex: 9;
        overflow: hidden;
        font-size: 28px;
        white-space: nowrap;
        text-overflow: ellipsis;
        word-break: keep-all;
      }
    }

    .childContent {
      padding: 4px 0 0 0;
      color: #69696d;
      font-size: 24px;

      img {
        width: 35px;
      }
    }
  }
}

.phone {
  color: #1f90ec;
}

.orderTrackText {
  font-size: 24px;
}

.treeNodeBlock::before {
  position: absolute;
  top: 26px;
  left: 0;
  width: 2px;
  height: 100%;
  background-color: #e1e1e1;
  content: '';
}

.treeNodeBlock:last-child::before {
  width: 0;
}
