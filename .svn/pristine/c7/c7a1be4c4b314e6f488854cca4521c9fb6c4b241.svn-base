.shopInfoView {
  position: relative;
  padding: 0 30px;
  background-color: #fff;
  border-radius: 24px;

  .shopInfo {
    padding-top: 32px;

    .shop {
      display: flex;
      flex-direction: row;
      padding-bottom: 32px;

      .shopImg {
        align-self: center;
        width: 160px;
        height: 160px;
      }

      .info {
        flex: 1;
        width: 0;
        margin-left: 18px;

        .title {
          height: 40px;
          overflow: hidden;
          color: rgba(6, 4, 30, 1);
          font-size: 28px;
          line-height: 40px;
          white-space: nowrap;
          text-overflow: ellipsis;
        }

        .props {
          height: 34px;
          margin-top: 10px;
          overflow: hidden;
          color: rgba(105, 105, 109, 1);
          font-size: 24px;
          line-height: 34px;
          white-space: nowrap;
          text-overflow: ellipsis;
        }

        .price {
          height: 40px;
          margin-top: 20px;
          color: rgba(6, 4, 30, 1);
          font-weight: 600;
          font-size: 28px;
          line-height: 40px;
        }
      }
    }

    .shopFooter {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding-bottom: 30px;

      .footerTitle {
        height: 48px;
        color: rgba(6, 4, 30, 1);
        font-size: 28px;
        line-height: 48px;
      }

      .footerValue {
        height: 48px;
        color: rgba(245, 60, 84, 1);
        font-weight: 600;
        font-size: 28px;
        line-height: 48px;
      }
    }
  }

  .notescontact {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 108px;
    border-top: 1px solid #f3f3f3;
  }
}
