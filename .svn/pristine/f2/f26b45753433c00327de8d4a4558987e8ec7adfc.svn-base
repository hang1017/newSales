.warrantyCell {
  margin-top: 24px;
  padding: 0 32px;
  background-color: #fff;
  border-radius: 24px;

  .goodsInfo {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 24px 0;
    border-bottom: 1px solid #f3f3f3;

    .picWidth {
      width: 200px;
      height: 200px;
      overflow: hidden;

      img {
        width: 100%;
        height: 100%;
      }
    }

    .infos {
      flex: 1;
      width: 0;
      padding-left: 10px;
      overflow: hidden;

      .title {
        display: -webkit-box;
        overflow: hidden;
        color: rgba(4, 28, 30, 1);
        font-size: 28px;
        line-height: 40px;
        text-overflow: -o-ellipsis-lastline;
        text-overflow: ellipsis;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
      }

      .price {
        margin-top: 30px;
        color: #f53c54;
        font-weight: 500;
        font-size: 36px;
      }
    }
  }

  .btnList {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
    height: 120px;

    .btnItem {
      height: 56px;
      margin-left: 20px;
      padding: 0 30px;
      color: #f53c54;
      line-height: 56px;
      border: 1px solid #f53c54;
      border-radius: 28px;
    }
  }
}
