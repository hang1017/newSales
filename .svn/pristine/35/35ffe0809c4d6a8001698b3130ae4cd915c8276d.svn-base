.slipModal {
  position: absolute;
  top: 0;
  z-index: 9999;
  width: 100%;
  height: 100%;
  padding: 100px 60px 32px 60px;
  background: #fff;

}


.refreshIcon {
  position: absolute;
  // right: 48px;
  width: 55px;
  margin: 10px;
}

.drag {
  position: relative;
  height: 80px;
  margin: 0 auto;
  line-height: 80px;
  background-color: #e8e8e8;

}

.bg {
  position: absolute;
  width: 40px;
  height: 100%;
  background-color: #2ca5ff;
}

.successBg {
  .bg;

  background-color: #0ed198;
}

.failBg {
  .bg;

  background-color: #FE4854;
}

.text {
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  user-select: none;
}

.btn {
  position: absolute;
  width: 80px;
  height: 80px;
  color: #666;
  text-align: center;
  background-color: #fff;
  border: 1px solid #ccc;
  cursor: move;
  user-select: none;

}
