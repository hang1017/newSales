.checkErrorStyle {

  .errorContent {
    border-top: 1px solid #ddd;
    padding: 64px 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #fff;


    .closeImg {
      width: 128px;
      height: 128px;
    }

    .errorTitle {
      font-size: 36px;
      font-weight: 400;
      color: #333333;
      line-height: 50px;
      padding-top: 48px;
    }

    .errorSubTitle {
      font-size: 26px;
      font-weight: 400;
      color: #999999;
      line-height: 36px;
      padding-top: 16px;
    }
  }

  .btnDiv {
    padding: 40px 32px 0 32px;

    .btn {
      background: linear-gradient(90deg, #6DB4FF 0%, #187DFB 100%);
      border-radius: 45px;
      font-size: 34px;
      font-weight: 500;
      color: #FFFFFF;
      line-height: 48px;
      padding: 22px;
    }
  }
}