.addAddr {
  .marginBlock {
    width: 100%;
    height: 20px;
    background: #f1f2f3;
  }

  .defalutBlock {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 24px;
    background: #fff;

    .defalutTitle {
      color: rgba(6, 4, 30, 1);
      font-weight: 400;
      font-size: 32px;
    }
  }

  .switchBlock {
    display: flex;
    align-items: center;
    justify-content: space-between;

    .tipMsg {
      color: rgba(149, 150, 156, 1);
      font-weight: 400;
      font-size: 24px;
    }

    img {
      width: 98px;
      height: 98px;
    }
  }

  :global {
    #alita-dform-name {
      margin-right: 40px !important;
    }

    .alitajs-dform-title {
      color: #000;
      font-weight: 400;
      font-size: 32px !important;
    }

    .alitajs-dform-input {
      padding: 16px 0;
    }

    .am-list-item .am-input-extra {
      line-height: 2;
    }

  }
}

:global {
  .alitajs-dform-address {
    background-color: #fff;

    .am-modal-body {
      height: 90% !important;

    }
  }
}

.deleteBtn {
  margin-top: 20px;
  padding: 32px;
  color: #fe4854;
  font-weight: 400;
  font-size: 32px;
  background: #fff;
}

:global {
  .alitajs-dform-address .alitajs-dform-address-content .alitajs-dform-address-value .alitajs-dform-address-value-item-label {
    text-align: center !important;
  }

  .alitajs-dform-address-value-item {
    display: flex !important;
    justify-content: center !important;
  }
}
