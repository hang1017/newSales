.pageView {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 24px;
  padding: 32px 24px;
  background-color: white;
  border-radius: 24px;

  .leftView {
    display: flex;
    flex: 1;
    flex-direction: row;

    .iconLeft {
      width: 32px;
      height: 32px;
      margin-top: 8px;
      margin-right: 24px;
    }

    .centerView {
      display: flex;
      flex-direction: column;

      .title {
        margin-bottom: 8px;
        color: #041c1e;
        font-size: 28px;
      }

      .detail {
        color: #696d6c;
        font-size: 24;

        span {
          color: #1f90ec;
        }
      }
    }
  }

  .iconRight {
    width: 32px;
    height: 32px;
    margin-left: 24px;
  }
}
