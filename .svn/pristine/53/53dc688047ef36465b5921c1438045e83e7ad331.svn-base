.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.6);
}

.wrapper {
  position: fixed;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1000;
  padding: 0 30px 30px;
  background-color: #fff;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  transform: translateY(200%);
  transition: transform 0.3s ease-out;
  will-change: transform;
  &.show {
    transform: translateY(0%);
  }
  .wrapperTitle {
    position: relative;
    height: 80px;
    color: rgba(6, 4, 30, 1);
    font-weight: 600;
    font-size: 36px;
    line-height: 80px;
    text-align: center;
    img {
      position: absolute;
      top: 30px;
      right: 0;
      width: 48px;
      height: 48px;
    }
  }

  .listContain {
    max-height: 50vh;
    overflow-y: auto;
  }

  .price {
    padding: 100px 0 50px;
    font-weight: 600;
    font-size: 28px;
    text-align: center;
    span {
      font-size: 56px;
    }
    .moneyType {
      padding-left: 5px;
      font-weight: 600;
      font-size: 36px;
      text-align: center;
    }
  }
  .okBtn {
    height: 80px;
    margin-top: 30px;
    color: rgba(255, 255, 255, 1);
    font-weight: 600;
    font-size: 32px;
    line-height: 80px;
    text-align: center;
    background: rgba(0, 191, 131, 1);
    border-radius: 40px;
  }

  .payCellBox {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 30px;
    border-bottom: 1px solid #f3f3f3;
    &:last-child {
      border-bottom: none;
    }

    .leftIcon {
      img {
        width: 64px;
        height: 64px;
        margin-right: 20px;
        vertical-align: middle;
      }
      span {
        color: rgba(6, 4, 30, 1);
        font-weight: 400;
        font-size: 32px;
        line-height: 64px;
        vertical-align: middle;
      }
    }

    .radio {
      width: 48px;
      height: 48px;
      img {
        width: 40px;
        height: 40px;
      }
    }
  }
}
