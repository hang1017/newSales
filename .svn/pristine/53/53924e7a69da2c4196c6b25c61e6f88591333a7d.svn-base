.header {
  .navTitle {
    margin-right: 56px;
    color: rgba(4, 28, 30, 1);
    font-weight: 400;
    font-size: 32px;
    &:last-child {
      margin-right: 0;
    }
    &.active {
      position: relative;
      color: rgba(4, 28, 30, 1);
      font-weight: 500;
      font-size: 36px;
      &::after {
        position: absolute;
        bottom: -16px;
        left: 50%;
        width: 48px;
        height: 8px;
        background-color: #f53c54;
        transform: translateX(-50%);
        content: '';
      }
    }
  }
}
