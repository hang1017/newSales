.activityItem {
  display: flex;
  flex-direction: column;
  // align-items: center;
  justify-content: center;
  margin: 30px 0;
  padding: 20px 0;
  border-bottom: solid #f4f7f6 1px;

  .leftActivity {
    flex: 5;
    color: rgba(4, 28, 30, 1);
    font-weight: 400;
    font-size: 28px;

    span {
      margin-right: 20px;
      padding: 2px;
      color: rgba(255, 255, 255, 1);
      font-weight: 400;
      font-size: 22px;
      background: rgba(245, 60, 84, 1);
      border-radius: 4px;
    }
  }
  .desStyle{
    display: flex;
    padding-left: 64px;
  }
  .rightActivity {
    flex: 1;
    text-align: right;

    img {
      width: 40px;
      height: 40px;
    }
  }
}
