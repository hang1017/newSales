.addrItem {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24px 0;
  background: #fff;
  border-bottom: solid 2px #e9e9e9;

  img {
    width: 40px;
    height: 40px;
    margin-right: 20px;
  }

  .addrInfo {
    flex: 5;
  }

  .editIcon {
    flex: 1;
    text-align: right;

    img {
      width: 30px;
      height: 30px;
    }
  }

  .normalText() {
    color: rgba(4, 28, 30, 1);
    font-weight: 600;
    font-size: 32px;
  }

  .name {
    .normalText();
  }

  .phone {
    .normalText();

    margin-left: 20px;
  }

  .address {
    color: rgba(105, 109, 108, 1);
    font-weight: 400;
    font-size: 24px;
  }

  .defalut {
    margin-left: 10px;
    padding: 2px 4px;
    color: rgba(255, 255, 255, 1);
    font-weight: 400;
    font-size: 22px;
    background: rgba(245, 60, 84, 1);
    border-radius: 17px 17px 17px 0;
  }
}
