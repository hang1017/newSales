// @themeBg: linear-gradient(270deg, rgba(247, 79, 79, 1) 0%, rgba(245, 60, 84, 1) 100%);
@themeColor: #2ca5ff;
@themeBg: linear-gradient(90deg, #6db4ff 0%, #187dfb 100%);

body {
  overflow: hidden;
}

#root {
  height: 100% !important;
  overflow-x: hidden;

  &>div {
    height: 100% !important;
    max-height: 100% !important;
    padding-top: calc(constant(safe-area-inset-top) * 2);
    padding-bottom: calc(constant(safe-area-inset-bottom) * 2);
    padding-bottom: 0 !important;
  }

  .rumtime-keep-alive-layout {
    height: calc(100% - 90px);
  }

  &>div>div {
    // height: 100% !important;
    max-height: 100% !important;
    padding-bottom: 0 !important;
    overflow: hidden !important;
  }
}

.textCenter {
  text-align: center;
}

.textRigth {
  text-align: right;
}

.am-navbar-light {
  background: rgba(252, 252, 252, 1) !important;
}

.buyBtn {
  padding: 15px;
  color: rgba(255, 255, 255, 1);
  font-weight: 400;
  font-size: 32px;
  text-align: center;
  background: @themeBg;
  border-radius: 36px;
}

// input::-webkit-input-placeholder {
//   color: #e5e5e5 !important;
// }

.inputNum {
  width: 80px;
  text-align: center;
  background: rgba(243, 243, 243, 1);
  border-radius: 4px;
}

.hideElement {
  display: none;
}

.am-picker-popup-header-left {
  color: #8b8b8b !important;
}

.topIcon {
  position: absolute;
  right: 40px;
  bottom: 50px;
  z-index: 999;
}

.navBarBlock {
  position: fixed;
  z-index: 999;
  width: 100%;
}

.am-toast {
  position: fixed;
  z-index: 9999999;
  width: 100%;
}

.rumtime-keep-alive-layout {
  height: 100%;
}

.rumtime-keep-alive-layout-no {
  height: calc(100% - 90px);
  overflow: auto;
}

.backIcon {
  position: absolute;
  top: 32px;
  left: 34px;

}