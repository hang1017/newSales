@import '../../../global.less';

.qryBalanceStyle {
    .balanceHead {
        height: 222px;
        padding: 40px;
        color: #FFF;
        border-radius: 16px;
        background: @themeBg;
        position: relative;

        .amount {
            display: flex;
            align-items: flex-end;
            justify-content: center;

            .amountMoney {
                font-size: 56px;
                font-weight: 600;
                color: #FFFFFF;
                line-height: 80px;
            }

            .amountText {
                font-size: 28px;
                font-weight: 600;
                color: #FFFFFF;
                line-height: 40px;
                padding-left: 8px;
                padding-bottom: 10px;
            }
        }

        .label {
            font-size: 28px;
            font-weight: 400;
            color: #FFFFFF;
            line-height: 40px;
            text-align: center;
        }

        .balanceBg {
            position: absolute;
            left: 0;
            right: 0;
            top: 0;
            bottom: 0;
            background-image: url('../../../assets/img/customer/balanceBg.png');
        }
    }

    .content {
        width: 100%;
        padding: 32px;

        .detailList {
            width: 100%;
            padding: 8px 32px;
            background-color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;

            .left {
                flex: 1;
                display: flex;
                align-items: center;
                justify-content: flex-start;

                .balImg {
                    width: 128px;
                    height: 128px;
                    flex-shrink: 0;
                }

                .text {
                    padding-left: 32px;

                    .title {
                        font-size: 32px;
                        font-weight: 400;
                        color: #242424;
                        line-height: 44px;
                    }

                    .subTitle {
                        font-size: 24px;
                        font-weight: 400;
                        color: #808080;
                        line-height: 34px;
                        padding-top: 6px;
                    }
                }
            }

            .right {
                .rightImg {
                    width: 32px;
                    height: 32px;
                }
            }
        }
    }
}