.uploadPhotos {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  background: rgba(245, 247, 249, 1);

  .hotTip {
    padding: 30px;
    color: #b3b5b7;
    font-size: 0.24rem;
    line-height: 0.32rem;
  }

  .main {
    flex: 1;
    height: 0;
    overflow: scroll;
  }

  :global {
    .am-card-body {
      border-top: unset;
    }

    .am-card.am-card-full {
      border: unset;
    }
  }

  .fileUpload {
    position: relative;
    z-index: 1000;
    display: block;
    width: 100%;
    height: 270px;
    // margin-left: calc(50% - 164px);
    // margin-left: -moz-calc(50% - 164px);
    opacity: 0;
  }

  .cardText {
    padding: 24px 0;
    text-align: center;

    .reLoad {
      color: rgba(6, 4, 30, 1);
      font-size: 24px;
      line-height: 32px;

      img {
        margin-right: 5px;
        vertical-align: unset;
      }
    }

    .clickUpload {
      margin-right: 16px;
      color: rgba(6, 4, 30, 1);
      font-size: 24px;
      line-height: 32px;
    }

    .personFace {
      color: #187dfb;
      font-size: 24px;
      line-height: 32px;
    }
  }

  .cardHeader {
    .cardTitle {
      display: block;
      color: rgba(6, 4, 30, 1);
      font-size: 32px;
      line-height: 44px;
    }

    .cardSubtitle {
      display: block;
      margin-top: 16px;
      color: rgba(179, 181, 183, 1);
      font-size: 24px;
      line-height: 32px;
    }
  }

  .cardBox {
    .cardContent {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 328px;
      margin-top: -272px;
      margin-left: calc(50% - 164px);
      padding-top: 24px;
      background: rgba(245, 247, 249, 1);
      border-radius: 8px;
    }
  }

  .uploadPicError {
    margin-top: 48px;
    color: rgba(245, 60, 84, 1);
    font-size: 28px;
    line-height: 32px;
  }

  .modifyButtonBox {
    // position: fixed;
    // bottom: 20px;
    margin: 0 32px;
    padding: 0 0 30px;
    padding-top: 50px;

    .modifyButton {
      height: 72px;
      line-height: 72px;
      background: linear-gradient(90deg, #6db4ff 0%, #187dfb 100%);
      border-radius: 44px;
    }
  }

  .idCardImg {
    z-index: 100;
    width: 280px;
    height: 152px;
  }

  .cardImgLeft {
    width: 100%;
    height: 152px;
    background: url('../../../assets/person.png') top no-repeat;

    .cameraImg {
      position: relative;
      top: 24%;
      left: 41%;
      z-index: 100;
      display: block;
      padding: 12px;
      background-color: red;
      border-radius: 32px;
    }
  }
}