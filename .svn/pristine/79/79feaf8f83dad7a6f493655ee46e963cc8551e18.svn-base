.container {
  width: 100%;
  height: 100%;
  .userInfo {
    position: relative;
    width: 100%;
    padding: 24px 24px 78px 24px;
    background: linear-gradient(270deg, #f74f4f 0%, #f53c54 100%);
    .headContent {
      display: flex;

      div {
        flex: 1;
      }

      .title {
        color: #fff;
        font-weight: 400;
        font-size: 36px;
        text-align: center;
      }

      .rigthContent {
        display: flex;
        justify-content: flex-end;

        img {
          margin-left: 24px;
        }
      }
    }

    .baseInfo {
      display: flex;
      flex-direction: row;
      align-items: center;
      margin-top: 88px;
      color: #fff;

      .toux {
        display: flex;
        align-items: center;
        justify-content: center;
      }

      img {
        margin-right: 24px;
      }
      .myInfo {
        font-weight: 500;
        font-size: 36px;
      }
    }

    .giftBag {
      position: absolute;
      top: 168px;
      right: 0;
      padding: 8px 8px 8px 24px;
      color: #f53c54;
      font-size: 28px;
      background: rgba(255, 255, 255, 0.61);
      border-radius: 100px 1px 1px 100px;
    }

    .headMenuNumList {
      display: flex;
      margin-top: 40px;
      color: #fff;
      text-align: center;

      div {
        flex: 1;
      }
      .menuNum {
        font-weight: 600;
        font-size: 36px;
      }
    }

    .headMenuList {
      display: flex;
      margin-top: 4px;
      color: #fff;
      text-align: center;
      .menutitle {
        flex: 1;
        font-size: 24px;
        opacity: 0.8;
      }
      .lene {
        width: 1px;
        background-color: #fff;
        opacity: 0.8;
      }
    }
  }

  .content {
    z-index: 99;
    width: 100%;
    margin-top: -38px;
    padding: 20px 0;
    overflow: scroll;
    background: linear-gradient(180deg, #fff 0%, #ffce6c 100%);
    border-radius: 24px 24px 0 0;

    .promotionCard {
      margin: 0 24px;
      padding: 32px;
      background-image: url('../../../assets/promotionImg.png');
      background-repeat: no-repeat;
      -moz-background-size: cover;
      -webkit-background-size: cover;
      -o-background-size: cover;
      background-size: cover;

      .promotionTitle {
        margin-top: 44px;
        color: #fff;
        font-size: 56px;
      }

      .subhead {
        color: #ffe132;
        font-size: 36px;
      }
      .time {
        margin-top: 72px;
        color: #fff1f0;
        font-size: 20px;
      }
    }
    .addUpExpenseDiv {
      margin: 56px 24px 0 24px;
      .addUpExpenseHeaderDiv {
        position: relative;
        display: flex;
        flex-direction: row;
        align-items: center;
        span {
          color: #041c1e;
          font-weight: 500;
          font-size: 32px;
        }
        .addUpExpenseHeaderSubTitle {
          margin-left: 16px;
          padding: 4px 16px;
          color: #f53c54;
          font-size: 24px;
          background-color: #ffe1d9;
          border-radius: 8px;
        }
        .activityBtn {
          position: absolute;
          right: 0;
          padding: 6px 18px;
          color: #f53c54;
          font-size: 20px;
          background-color: #fff;
          border: 2px solid #f53c54;
          border-radius: 36px;
        }
        .activityBtn :active {
          opacity: 0.8;
        }
      }
    }
    .cardItem {
      margin: 32px 24px 0 24px;
      padding: 16px;
      background-color: #fff8ec;
      border-radius: 20px;

      .cardItemImg {
        position: relative;

        .cardItemImgContent {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 100%;
          padding: 32px;

          .remarkText {
            margin-top: 46px;
            font-size: 36px;
          }

          .titleText {
            margin-top: 16px;
            font-size: 48px;
          }
        }
        img {
          width: 100%;
          height: 100%;
        }
      }

      .cardImgBottom {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        margin-top: 18px;

        .timeText {
          color: #ec5d3c;
          font-size: 36px;
        }

        .rightButtom {
          display: flex;
          flex-direction: row;
          align-items: center;
          justify-content: center;
          width: 200px;
          height: 66px;
          color: #fff;
          font-size: 28px;
          border-radius: 36px;
        }
      }
    }
  }
}
