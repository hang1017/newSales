.doubleButtonStyle {
  right: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  padding: 20px 32px 78px 32px;


  .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 318px;
    height: 90px;
    color: #fff;
    font-weight: 500;
    font-size: 34px;
    line-height: 44px;
    border-radius: 45px;
  }

  .leftStyle {
    .btn();

    color: #187DFA;
    background: transparent;
    border: 2px solid #187DFA;
  }

  .rightStyle {
    .btn();

    background: linear-gradient(90deg, #6db4ff 0%, #187dfb 100%);
  }
}
