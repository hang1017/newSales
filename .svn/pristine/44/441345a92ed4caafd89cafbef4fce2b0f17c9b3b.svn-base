.prodInfoBlock {
  display: flex;
  align-items: center;
  margin: 24px 0;

  .righContent {
    display: flex;
    align-items: center;
    width: 100%;
    margin-left: 12px;
    padding: 24px 0;
    border-bottom: 1px solid #f4f7f6;
  }

  .selectImg {
    width: 40px;
    height: 40px;
  }

  .goodsImg {
    width: 200px;
    height: 200px;
  }

  .prodDes {
    display: -webkit-box;
    width: 100%;
    overflow: hidden;
    color: rgba(4, 28, 30, 1);
    font-weight: 400;
    font-size: 28px;
    text-align: left;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .subDes {
    margin-top: 10px;

    span {
      padding: 6px 16px;
      color: rgba(4, 28, 30, 1);
      font-weight: 400;
      font-size: 22px;
      background: rgba(244, 247, 246, 1);
      border-radius: 24px;
    }
  }
}

.prodPriceAndNum {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20px;

  .prodPrice {
    margin-right: 20px;
  }

  .integer {
    color: #f53c54;
    font-weight: 600;
    font-size: 44px;
  }

  .decimal {
    color: #f53c54;
    font-size: 28px;
  }
}

.goodsOther {
  color: rgba(4, 28, 30, 1);
  font-weight: 400;
  font-size: 24px;

  span {
    margin-right: 10px;
    padding: 2px;
    color: rgba(255, 255, 255, 1);
    font-size: 22px;
    background: rgba(245, 60, 84, 1);
    border-radius: 4px;
  }
  & > div {
    margin-top: 12px;
  }
}
