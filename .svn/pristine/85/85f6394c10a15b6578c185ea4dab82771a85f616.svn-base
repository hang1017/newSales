.center {
  background-color: #f5f7f9;

  .recommendBlock {
    height: 100px;

    .recommend {
      margin: 16px;
      border: 2px solid rgba(0, 0, 0, 0.1);
      border-radius: 8px;

      .proTitle {
        display: -webkit-box;
        margin: 20px;
        overflow: hidden;
        color: rgba(4, 28, 30, 1);
        font-weight: 400;
        font-size: 28px;
        text-align: left;
        text-overflow: ellipsis;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
      }

      .price {
        margin: 20px;
        color: rgba(245, 60, 84, 1);
        font-weight: 600;
        font-size: 36px;
        text-align: left;

        span {
          font-weight: 500;
          font-size: 24px;
        }
      }

      .detail {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin: 20px;
        color: #9e9ea3;
        font-size: 20px;
      }
    }

    :global {
      .am-grid .am-flexbox {
        height: 639px;
        // margin-top: -12px !important;
        // background   : transparent !important;
      }
    }
  }
}
