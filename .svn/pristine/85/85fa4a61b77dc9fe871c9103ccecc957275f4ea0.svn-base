.cartFooterStyle {

  .personContent {
    display: flex;
    flex-direction: column;
    align-items: center;

    .personImg {
      width: 48px;
      height: 54px;
    }

    .personText {
      font-size: 16px;
      font-weight: 400;
      color: #242424;
      line-height: 22px;
      padding-top: 8px;
    }
  }

  .ilTotal {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 20px 32px 20px 32px;
    background: #fff;
    box-shadow: 0 -1px 0 0 #e9e9e9;

    .ilTotalImg {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-left: 54px;

      .cartText {
        font-size: 16px;
        font-weight: 400;
        color: #242424;
        line-height: 22px;
        padding-top: 8px;
      }

      .cartImg {
        flex-shrink: 0;
        width: 52px;
        height: 54px;
      }

      .cartNum {
        position: absolute;
        top: -12px;
        right: -20px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 30px;
        height: 30px;
        padding: 0 4px;
        color: #fff;
        font-weight: 500;
        font-size: 16px;
        line-height: 22px;
        background: #fe4854;
        border: 2px solid #fff;
        border-radius: 50%;
      }
    }

    .totalText {
      flex: 1;
      padding: 0 20px;
      color: #242424;
      font-weight: 400;
      font-size: 34px;
      line-height: 48px;
      text-align: right;
      white-space: nowrap;

      span {
        font-weight: 600;
        color: #FE4854;
      }

      .promotion {
        font-size: 20px;
        font-weight: 400;
        color: #FE4854;
        line-height: 28px;
        padding-right: 8px;
      }
    }

    .totalBtn {
      display: flex;
      align-items: center;
      justify-content: center;
      height: auto;
      padding: 16px 60px;
      color: #fff;
      font-weight: 500;
      font-size: 34px;
      line-height: 48px;
      background: linear-gradient(90deg, #6db4ff 0%, #187dfb 100%);
      border-radius: 40px;
    }
  }
}