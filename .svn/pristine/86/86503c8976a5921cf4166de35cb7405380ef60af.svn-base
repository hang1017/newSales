.headerView {
  height: 408px;

  .navBar {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    z-index: 10;
    height: 90px;
    background-color: rgba(245, 60, 84, 1);
    opacity: 0;

    .backIcon {
      position: absolute;
      top: 50%;
      left: 20px;
      width: 48px;
      height: 48px;
      background: url(../../../../../assets/img/back_white.png);
      background-repeat: no-repeat;
      background-position: center center;
      background-size: contain;
      transform: translateY(-50%);
    }
  }

  .header {
    position: relative;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: 100%;
    background: linear-gradient(270deg, rgba(247, 79, 79, 1) 0%, rgba(245, 60, 84, 1) 100%);

    .backIcon {
      position: absolute;
      top: 56px;
      left: 20px;
      width: 64px;
      height: 64px;
      background: url(../../../../../assets/img/back_white.png);
      background-repeat: no-repeat;
      background-position: center center;
      background-size: contain;
    }

    .payResult {
      img {
        width: 64px;
        height: 64px;
      }

      span {
        padding-left: 20px;
        color: rgba(255, 255, 255, 1);
        font-weight: 600;
        font-size: 36px;
        line-height: 48px;
        vertical-align: middle;
      }
    }
  }
}
