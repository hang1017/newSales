.footSingleBtn {
  position: fixed;
  bottom: 0;
  z-index: 999;
  width: 100%;
  padding: 20px 30px 40px 30px;
  background: #fff;

  .normalBtn() {
    padding: 15px;
    font-weight: 400;
    font-size: 32px;
    text-align: center;
    border-radius: 44px;
  }

  .submit {
    .normalBtn();

    color: rgba(255, 255, 255, 1);
    background: linear-gradient(270deg, rgba(247, 79, 79, 1) 0%, rgba(245, 60, 84, 1) 100%);
  }

  .newSubmit {
    background: linear-gradient(90deg, #6db4ff 0%, #187dfb 100%);
  }

  .grayBtn {
    .normalBtn();

    color: #95969c;
    background: #f3f3f3;
  }
}
