.commitOrder {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f7f9;

  .main {
    flex: 1;
    height: 0;
    overflow: scroll;
  }

  .footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    height: 96px;
    padding: 10px 24px;
    background: rgba(252, 252, 252, 1);
    box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.08);

    .priceNum {
      color: #f53c54;
      font-weight: 600;
      font-size: 28px;

      span {
        font-size: 44px;
      }
    }

    .commitBtn {
      height: 76px;
      padding: 0 36px;
      color: rgba(255, 255, 255, 1);
      font-size: 32px;
      line-height: 76px;
      background: linear-gradient(270deg, rgba(247, 79, 79, 1) 0%, rgba(245, 60, 84, 1) 100%);
      border-radius: 44px;
    }
  }
}
