.recommendBlock {
  padding: 0 0 0 24px;

  .recommend {
    margin: 0 24px 12px 0;
    padding: 0 24px 30px 24px;
    background: rgba(255, 255, 255, 1);
    border-radius: 8px;

    .proTitle {
      display: -webkit-box;
      width: 100%;
      overflow: hidden;
      color: rgba(4, 28, 30, 1);
      font-weight: 400;
      font-size: 28px;
      text-align: left;
      text-overflow: ellipsis;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
    }

    .price {
      color: rgba(245, 60, 84, 1);
      font-weight: 600;
      font-size: 36px;
      text-align: left;

      span {
        font-weight: 500;
        font-size: 24px;
      }
    }
  }

  :global {
    .am-grid .am-flexbox {
      height: 524px;
      margin-top: -12px !important;
      background: transparent !important;
    }
  }
}
