.center {
  position: relative;
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f7f9;

  :global {
    .slider-frame .slider-list {
      height: 732px !important;
    }
  }

  .orderSearchBtn {
    position: absolute;
    top: 48px;
    right: 0;
    z-index: 99;
    width: 192px;
    height: 68px;
    color: rgba(255, 255, 255, 1);
    font-weight: 500;
    font-size: 26px;
    line-height: 68px;
    text-align: center;
    background-color: #f53c54;
    border-top-left-radius: 34px;
    border-bottom-left-radius: 34px;

    &::after {
      display: inline-block;
      width: 32px;
      height: 32px;
      vertical-align: middle;
      background: url(../../../assets/img/right.png) no-repeat center;
      background-size: cover;
      content: '';
    }
  }

  .main {
    flex: 1;
    height: 0;
    overflow: scroll;

    .shopImgs {
      position: relative;

      .carouselImg {
        width: 100%;
        height: 732px;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
      }

      .currentPage {
        position: absolute;
        right: 32px;
        bottom: 32px;
        padding: 8px 32px;
        color: #fff;
        font-size: 24px;
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 25px;
      }
    }
  }

  .orderimg {
    position: fixed;
    top: 90px;
    right: 24px;
    width: 72px;
    height: 72px;
  }

  .footer {
    display: flex;
    justify-content: space-between;
    height: 116px;
    padding: 20px 24px;
    background: rgba(252, 252, 252, 1);
    box-shadow: 0 0 8px 0 rgba(0, 0, 0, 0.08);

    .leftBlock {
      display: flex;
      flex: 2;
      justify-content: center;

      div {
        flex: 1;
        margin-bottom: 10px;
        color: #041c1e;
        font-weight: 400;
        font-size: 22px;
      }

      img {
        margin-bottom: 10px;
      }

      .alignImg {
        margin-left: 20px;
      }
    }

    .buyBtn {
      width: 45%;
      height: 76px;
      color: #fff;
      font-size: 28px;
      line-height: 76px;
      text-align: center;
      background: linear-gradient(270deg, rgba(247, 79, 79, 1) 0%, rgba(245, 60, 84, 1) 100%);
      border-radius: 38px;
    }
  }
}

#goods0 {
  .global {
    .slider-list {
      height: 375px;
    }
  }
}

.toOrder {
  position: fixed;
  top: 150px;
  right: 0;
  z-index: 99;
  padding: 15px 0 15px 30px;
  color: #fff;
  text-align: center;
  background: rgba(245, 60, 84, 1);
  border-radius: 34px 0 0 34px;

  img {
    margin-top: -4px;
    margin-left: 10px;
  }
}
