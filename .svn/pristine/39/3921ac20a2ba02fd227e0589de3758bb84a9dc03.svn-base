.formCardStyle {
  background-color: #fff;
  border-radius: 20px;
  border: 8px solid #FFB6CA;
  padding: 44px 0 52px 0;

  :global {
    .am-list-body {
      border: none;
    }

    .am-input-control input {
      font-size: 28px !important;
    }

    .am-list-item .am-list-line {
      padding-right: 0px;
    }

    .am-list-body div .am-list-line {
      border-bottom: 1px solid rgb(205, 205, 205);
    }

    .am-list-item .am-list-line .am-list-arrow {
      background-image: url('../../../../assets/img/quickOrder/right.png');
      width: 14px;
      height: 22px;
    }

    .alitajs-dform-text-text {
      font-size: 28px;
    }

    .alitajs-dform-placeholder .alitajs-dform-text-text {
      color: #999999;
    }

    .alitajs-dform-placeholder .alitajs-dform-title {
      font-size: 28px;
      font-family: PingFangSC-Semibold,
        PingFang SC;
      font-weight: 600;
      color: #363636;
      line-height: 40px;
    }

    .alitajs-dform-value-content .alitajs-dform-title {
      font-size: 28px;
      font-family: PingFangSC-Semibold,
        PingFang SC;
      font-weight: 600;
      color: #363636;
      line-height: 40px;
    }

    .am-input-control input::placeholder {
      // 自定义样式
      font-size: 28px;
      color: #999999 !important;
    }

    .alitajs-dform-input-text::placeholder {
      // 自定义样式
      font-size: 28px !important;
      color: #999999 !important;
    }

    .alitajs-dform-input-value::placeholder {
      // 自定义样式
      font-size: 28px !important;
      color: #999999 !important;
    }
  }

  .formTitle {
    display: flex;
    justify-content: center;
    padding-bottom: 30px;

    .blingImg {
      width: 238px;
      height: 36px;
    }
  }

  .formStyle {
    padding-left: 18px;
    padding-right: 58px;
  }

  .formStyle2 {
    padding-left: 18px;
    padding-right: 58px;
    height: 0px;
    overflow: hidden;
    transition: height 1s;
  }

  .formShow {
    height: 180px;
  }

  .fcBtnDiv {
    padding: 32px 56px 24px 48px;

    .fcBtn {
      background: #EE4476;
      border-radius: 200px;
      font-size: 36px;
      font-family: PingFangSC-Semibold,
        PingFang SC;
      font-weight: 600;
      color: #FFFFFF;
      line-height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .fcBtns {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
    }
  }

  .footBtnDiv {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding-left: 48px;

    .checkImg {
      width: 36px;
      height: 36px;
    }

    .text {
      font-size: 26px;
      font-family: PingFangSC-Semibold,
        PingFang SC;
      font-weight: 600;
      color: #999999;
      line-height: 36px;
      padding-left: 22px;

      span {
        color: #EE4476;
      }
    }
  }

  .codeText {
    font-size: 28px;
    font-family: PingFangSC-Semibold,
      PingFang SC;
    font-weight: 600;
    color: #EE4476;
    line-height: 40px;
  }

  .rightImg {
    width: 14px;
    height: 22px;
  }

  .validateCodeImg {
    width: 200px;
    height: 66px;
  }
}