.serviceInfo {
  position: relative;
  padding: 38px 30px 30px;
  background-color: #fff;
  border-radius: 24px;

  .title {
    height: 44px;
    color: rgba(6, 4, 30, 1);
    font-weight: 600;
    font-size: 32px;
    line-height: 44px;

    span {
      display: inline-block;
      width: 8px;
      height: 32px;
      margin-right: 10px;
      vertical-align: middle;
      background: linear-gradient(180deg, rgba(243, 23, 13, 1) 0%, rgba(255, 104, 49, 1) 100%);
    }
  }

  .servicePage {
    padding: 20px 0;
    border-bottom: 1px solid #f3f3f3;

    &:last-child {
      border-bottom: none;
    }

    .row {
      display: flex;
      flex-direction: row;
      padding: 10px 0;

      .rowHd {
        height: 48px;
        color: rgba(149, 150, 156, 1);
        font-size: 28px;
        line-height: 48px;
      }

      .rowBd {
        flex: 1;
        width: 0;
        color: rgba(6, 4, 30, 1);
        font-size: 28px;
        line-height: 48px;
      }
    }
  }
}
