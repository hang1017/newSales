.TabItemStyle {
  display: flex;
  margin-bottom: 32px;

  .tdItemImg {
    flex-shrink: 0;
    width: 180px;
    height: 180px;
  }

  .tdItemContent {
    display: flex;
    flex: 1;
    flex-direction: column;
    width: 0;
    padding-left: 16px;

    .tdiTitle {
      padding-top: 2px;
      padding-right: 32px;
      overflow: hidden;
      color: #242424;
      font-weight: 500;
      font-size: 32px;
      line-height: 44px;
      white-space: nowrap;
      text-align: left;
      text-overflow: ellipsis;
    }

    .tdiSubTitle {
      display: -webkit-box;
      padding-top: 6px;
      padding-right: 32px;
      overflow: hidden;
      color: #808080;
      font-weight: 400;
      font-size: 24px;
      line-height: 34px;
      text-align: left;
      // white-space: nowrap;
      text-overflow: ellipsis;
      word-break: break-all;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
    }

    .tabItemfooter {
      display: flex;
      flex: 1;
      align-items: flex-end;

      .tdiFooterMoney {
        color: #fe4854;
        font-weight: 500;
        font-size: 32px;
        line-height: 44px;
      }

      .tdiFooterChange {
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: flex-end;
        padding-right: 32px;

        .selectSpec {
          background-color: rgb(81, 165, 248);
          color: #fff;
          padding: 4px 8px;
          border-radius: 20px;
          font-size: 24px;
        }

        .footLeftImg {
          width: 40px;
          height: 40px;
        }

        .footNum {
          // line-height: 50px;
          padding: 0 12px;
          color: #464646;
          font-weight: 500;
          font-size: 26px;
        }

        .footRightImg {
          width: 40px;
          height: 40px;
        }
      }
    }
  }
}