@themeColor: #1C60FF;

.normalSectPage {
    height: 100vh;
    overflow-y: scroll;
    background: #fff;




    :global {
        .am-search-input {
            height: 80px !important;
            border-radius: 48px;
        }

        .am-search-input input[type="search"] {
            height: 80px !important;
        }

        .am-search-input .am-search-synthetic-ph {
            height: 80px !important;
            line-height: 80px;

        }

        .slider-list {
            height: 180px;
            touch-action: none;
        }

        .am-flexbox.am-flexbox-justify-center {
            height: 180px;
        }
    }


}

.pageTitle {
    padding: 32px 0;
    color: #FFF;
    font-weight: 400;
    font-size: 34px;
    text-align: center;
    background: @themeColor;
}

.iconContent {
    display: flex;
    align-items: center;
    justify-content: space-between;

    img {
        width: 44px;
        height: 44px;
    }

    .searchIcon {
        margin-right: 20px;
    }
}

.normalSectHead {
    height: 486px;
    margin-top: -2px;
    padding: 32px 40px;
    text-align: center;
    background-image: url(../../../assets/img/customer/sect/sect_bg.png);
    background-repeat: no-repeat;
    background-size: 100%;

    .headInfo {
        display: flex;
        align-items: center;
        padding: 30px;

        &>img {
            width: 138px;
            height: 138px;
            border-radius: 100%;

        }

        .rightInfo {
            width: 75%;
            margin-left: 30px;
            text-align: left;
        }

        .headContent {
            display: flex;
            align-items: center;
            justify-content: space-between;

            .headName {
                color: #282A2D;
                font-weight: 600;
                font-size: 36px;
            }
        }

        .currentNum {
            color: @themeColor;
        }



        .des {
            width: 90%;
            margin-top: 10px;
            overflow: hidden;
            color: #282A2D;
            font-size: 26px;
            white-space: nowrap;
            text-overflow: ellipsis;
            word-break: keep-all;
            opacity: 0.6;

        }
    }

    .myHeadInfo {
        display: flex;
        align-items: center;
        margin-top: -20px;

        .coupon {
            flex: 1;
            text-align: center;


            &>div {
                color: #1C60FF;
                font-weight: bold;
                font-size: 64px;
            }

            &>span {
                color: #131415;
                font-weight: 400;
                font-size: 28px;


            }
        }

        .inviteBtn {
            width: 288px;
            height: 88px;
            margin-right: -10px;
            color: #fff;
            font-weight: 600;
            font-size: 34px;
            line-height: 88px;
            background: linear-gradient(133deg, #2B5DFE 0%, #3778FF 100%);
            border-radius: 49px 0 0 49px;
            box-shadow: 12px 24px 24px -16px rgba(28, 96, 255, 0.27);

            &>img {
                width: 40px;
                height: 40px;
                margin-right: 10px;
            }


        }

        .alertMsg {
            position: absolute;
            width: 16px;
            height: 16px;
            margin-top: -10%;
            margin-left: 18%;
            background: #FF2B2B;
            border-radius: 50px;
        }
    }


    .cardContent {
        margin-top: 20px;
        padding-bottom: 30px;
        background: #FFF;
        border-radius: 40px;
        box-shadow: 0 14px 42px -18px rgba(60, 25, 255, 0.16);

        .myToux {
            width: 172px;
            height: 172px;
            margin-top: -86px;

        }


        .cardCell {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
            padding: 30px;
            font-size: 26px;
            border-top: solid 1px #e3e3e3;
        }

        .leftSpan {
            margin-left: 10px;
            color: #333;

        }



    }
}

.otherInfo {
    margin-top: 30px;
    padding: 0 40px;

}

.headOtherInfo {
    margin-top: 160px;
    padding: 0 40px;
}

.contentTitle {
    display: flex;
    align-items: center;
    justify-content: space-between;

    &>div {
        display: flex;
        align-items: center;
    }

    .titleIcon {
        display: block;
        width: 10px;
        height: 20px;
        background: #0F51F9;
        border-radius: 7px;
        box-shadow: 0 12px 24px 0 #B3CDFF;

    }

    .titleText {
        margin-left: 12px;
        color: #131415;
        font-weight: 600;
        font-size: 32px;
    }

    .numText {
        margin-left: 12px;
        color: #FD5243;
        font-weight: 600;
        font-size: 42px;

    }

    .unitText {
        color: #FD5243;
        font-weight: 600;
        font-size: 26px;
    }

    .rightText {
        display: flex;
        margin-right: 6px;
        color: #131415;
        font-weight: 600;
        font-size: 24px;
        opacity: 0.6;
    }
}

.rigthSpan {
    margin-right: 4px;
    color: @themeColor;
}

.gridIcon {
    width: 104px;
    height: 104px;
    border-radius: 100%;
}

.gridText {
    display: -webkit-box;
    width: 80%;
    overflow: hidden;
    color: #666;
    font-weight: 400;
    font-size: 26px;
    white-space: nowrap;
    text-overflow: ellipsis;
    word-break: keep-all;
    -webkit-box-orient: vertical;
}


.memberGrid {
    height: 30vh;
    overflow: scroll;
}

.btnContent {
    display: flex;
    justify-content: space-around;
    margin-top: 55px;
    font-weight: 600;


    .memberBtn {
        padding: 20px 70px;
        color: #135FFC;
        font-size: 36px;
        background: #CEDEFF;
        border-radius: 49px;
        box-shadow: 0 30px 20px -20px rgba(28, 96, 255, 0.19);

    }

    .creatHead {
        padding: 20px 36px;
        color: #FFF;
        font-size: 34px;
        background: #135FFC;
        border-radius: 49px;
        box-shadow: 0 30px 20px -20px rgba(28, 96, 255, 0.19);

        .inviteBtn {
            margin-right: 10px;
        }
    }


}
