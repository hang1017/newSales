.fillApply {
    display: flex;
    flex-direction: column;
    height: calc(100vh - 90px);

    .productInfo {
        margin-top: 20px;
        background: #fff;
    }

    .pageTitle {
        padding: 32px 32px 0 32px;
        color: #333;
        font-weight: 600;
        font-size: 28px;
        background: #fff;
    }

    .refundBlock {
        margin-top: -32px;
    }

    .refundInfo {
        background: #fff;
    }

    .content {
        flex: 1;
        overflow-y: scroll;
    }

    .refundImgBlock {
        padding: 32px;
        color: #999;
        font-weight: 400;
        font-size: 26px;
        background: #fff;
    }
}

.uploadCell {
    display: flex;
    align-items: center;
    justify-content: space-around;

    .uploadItem {
        position: relative;
        width: 252px;
        height: 150px;
        margin: 30px 0;
        text-align: center;
    }

    .imgInput {
        position: absolute;
        width: 220px;
        height: 150px;
        margin-left: -250px;
        font-size: 20px;
        opacity: 0;
    }

    img {
        width: 252px;
        height: 150px;
    }
}
