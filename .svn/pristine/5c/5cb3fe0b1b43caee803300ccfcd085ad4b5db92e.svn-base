.container {
  .inputView {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;

    input {
      flex: 1;
      margin-right: 20px;
    }

    .inputStyle {
      padding: 32px 0;
      color: #041c1e;
      font-size: 40px;
    }

    .deleteImg {
      width: 32px;
      height: 32px;
      flex-shrink: 0;
    }
  }

  .line {
    width: 100%;
    height: 2px;
    background-color: #f4f7f6;
  }
}

:global {
  input::-webkit-input-placeholder {
    color: #b3b5b7;
    font-size: 32px;
  }
}