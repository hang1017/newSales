@import '../../../../global.less';

.pageView {
  margin-bottom: 24px;
  padding: 32px 24px;
  background-color: white;
  border-radius: 24px;

  .titleView {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 32px;

    .redLine {
      width: 8px;
      height: 32px;
      margin-right: 10px;
      background: @themeBg;
    }

    span {
      color: #041c1e;
      font-size: 32px;
    }
  }

  .contenView {
    padding: 0 16px;

    .content {
      margin-bottom: 16px;
      color: #696d6c;
      font-size: 28px;

      .value {
        color: #041c1e;
        font-size: 28px;
      }
    }

    .top {
      margin-top: 50px;

      .content {
        margin-bottom: 16px;
        color: #696d6c;
        font-size: 28px;

        .value {
          color: #041c1e;
          font-size: 28px;
        }
      }
    }

    .line {
      width: 100%;
      height: 2px;
      margin-top: 32px;
      background-color: #f3f3f3;
    }

    .contactView {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      margin-top: 32px;

      img {
        width: 48px;
        height: 48px;
        margin-right: 20px;
      }

      span {
        color: #041c1e;
        font-size: 24px;
      }
    }

    .rechangeContent {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      margin-top: 32px;
      margin-bottom: 32px;
      font-size: 28px;

      .label {
        color: #696d6c;
      }

      .value {
        color: #041c1e;

        span {
          font-size: 32px;
        }
      }
    }

    .needPay {
      display: flex;
      flex-direction: row-reverse;
      margin-top: 32px;
      font-size: 28px;

      .value {
        color: @themeColor;

        span {
          font-size: 32px;
        }
      }

      .label {
        color: #041c1e;
      }
    }
  }
}
