.fooBlock {
  margin: 40px 0;
  padding: 0 24px;

  .textBlock {
    display: flex;
    align-items: center;
    justify-content: center;

    .textItem {
      flex: 1;
      text-align: center;

      .textLine {
        width: 100%;
        height: 2px;
        background: rgba(229, 229, 229, 1);
      }

      .footText {
        color: rgba(179, 181, 183, 1);
        font-weight: 400;
        font-size: 24px;
      }
    }
  }

  .footImg {
    text-align: center;

    img {
      width: 284px;
      height: 36px;
    }
  }
}
